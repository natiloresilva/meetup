<div class="card card-meeting">
    {{#if _doc.meetingImg}}
    <img class="card-img-top" src="{{_doc.meetingImg}}" alt="Meeting picture">
    {{^}}
    <img src="../../images/bar.jpg" class="card-img-top" alt="bar">
    {{/if}}
    <div class="card-body">
        <h5 class="card-title">{{_doc.meetingName}}</h5>
        <p class="card-text">{{_doc.meetingLanguage}}</p>
        <p class="card-text">{{_doc.meetingCity}}</p>
        {{#if isOrganizer}}
            <a href="/meet/meetings/{{_doc._id}}/editMeeting" class="btn btn-primary">Edit meeting</a>
        {{else}}
            <form class="" method="POST" action="/meet/meetings/{{_doc._id}}/remove">
                <button class="btn btn-primary float-right" type='submit'>Can't go</button>
            </form>
        {{/if}}
        <a href="/meet/meetings/{{_doc._id}}" class="btn btn-primary">More Details!</a>
    </div>
</div>